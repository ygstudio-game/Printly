{
  "name": "printly-desktop",
  "version": "1.0.0",
  "author": "Yadnyesh Borole & Dhananjay Chavan",
  "description": "PRINTLY Desktop App for Print Shops",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc",
    "build:renderer": "webpack --mode production",
    "build": "npm run build:main && npm run build:renderer",
    "obfuscate": "javascript-obfuscator ./dist --output ./dist --compact true --self-defending true",
    "start": "npm run build:main && webpack --mode development && electron .",
    "dist": "npm run build && npm run obfuscate && electron-builder",
    "release": "npm run build && npm run obfuscate && electron-builder --publish always"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.554.0",
    "mammoth": "^1.11.0",
    "node-fetch": "^2.7.0",
    "pdf-lib": "^1.17.1",
    "pdf-to-printer": "^5.6.1",
    "pdfjs-dist": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^10.2.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.5.8",
    "autoprefixer": "^10.4.22",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.1.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.3",
    "javascript-obfuscator": "^5.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.18",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ygstudio-game/Printly"
  },
  "build": {
    "appId": "com.printly.app",
    "productName": "PRINTLY",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/Printly.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PRINTLY",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "installerIcon": "assets/Printly.ico",
      "uninstallerIcon": "assets/Printly.ico",
      "installerHeaderIcon": "assets/Printly.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ygstudio-game",
        "repo": "Printly"
      }
    ]
  }
}
